{
	"name": "Music163",
	"version": "0.9.0",
	"manifest_version": 2,
	"icons": { "128": "ic_hello.png" },
	"description": "替换网易云音乐脚本core.js,需使用最新的core.js",
	"permissions": ["webRequest",
	"webRequestBlocking",
	"https://s3.music.126.net/web/s/core.js*",//获取访问权限
	"tabs"],
	"browser_action": {
		"default_icon": "ic_hello.png",
		"default_title": "替换网易云音乐脚本core.js",
		"default_popup": "pop.html"
	},
	"background": {
		"page": "background.html"
	},
	"web_accessible_resources": ["music163core.js"],
	"content_scripts": [{
		"matches": ["https://s3.music.126.net/web/s/core.js*"],//脚本注入
		"js": ["music163core.js"]
	}]
}
